# Count even and odd digits in a number

num = int(input("Enter a number: "))
if num < 0:
    num = -num
even_count = 0
odd_count = 0
while num > 0:
    digit = num % 10
    if digit % 2 == 0:
        even_count += 1
    else:
        odd_count += 1
    num //= 10
print("Even digits count:", even_count)
print("Odd digits count:", odd_count)
